@model TraversalCoreProje.Areas.Member.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Profil Güncelleme Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Profil ile ilgili bilgilerinizi bu sayfadan güncelleyebilirsiniz</p>
                    <form method="post" enctype="multipart/form-data">
                        @Html.Label("Adınız")
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                        <br />
                        @Html.Label("Soyadınız")
                        @Html.TextBoxFor(x => x.surname, new { @class = "form-control" })
                        <br />
                        @Html.Label("Mail Adresiniz")
                        @Html.TextBoxFor(x => x.mail, new { @class = "form-control" })
                        <br />
                        @Html.Label("Şifreniz")
                        @Html.TextBoxFor(x => x.password, new { @class = "form-control" })
                        <br />
                        @Html.Label("Şifre Tekrar")
                        @Html.TextBoxFor(x => x.confirmpassword, new { @class = "form-control" })
                        <br />
                        @Html.Label("Telefon Numarası")
                        @Html.TextBoxFor(x => x.phonenumber, new { @class = "form-control" })
                        <br />
                        <div class="form-group">
                            <label>Resim Seçin</label>
                            @Html.EditorFor(x => x.Image, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                        </div>
                        <br />
                        <button class="btn btn-primary">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
