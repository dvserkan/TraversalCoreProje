@model ForgetPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifre Yenileme</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
 
    <!-- Modal -->
    <div class="modal fade" id="forgetPasswordModal" tabindex="-1" aria-labelledby="forgetPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgetPasswordModalLabel">Şifre Yenileme</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="ForgetPassword" asp-controller="PasswordChange">
                        <div class="mb-3">
                            <label for="email" class="form-label">Mail Adresinizi Giriniz</label>
                            <input type="text" class="form-control" id="email" asp-for="Mail" required/>
                        </div>
                        <button type="submit" class="btn btn-primary" onclick="sendMessage()">Şifre Yenileme Linki Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    function sendMessage() {
        Swal.fire({
            title: "Tebrikler",
            text: "Şifre Sıfırlama Linki Mail Adresinize Gönderildi!",
            icon: "success",
            showCancelButton: false,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Tamam",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/Login/SignIn/";
            }

        });
    }
</script>